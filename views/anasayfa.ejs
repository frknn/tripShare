    <% include partials/header.ejs %>

    <div class="jumbotron text-center">
        <h1>TRIPSHARE</h1>
        <p>Unutulmaz gezi anılarınızı paylaşın, tavsiyeler verin!</p>
    </div>
    <div class = "container">
        <div class="row">
            <% foundPosts.forEach((post)=>{ %>
            <div class="col-xl-4" style="padding: 10px">
                <div class="card text-center mx-auto" style="width: 350px; background:#cbb5ff">
                    <img class="card-img-top img-fluid mx-auto" src="/images/<%= post.tripImage %>" alt="blog images" style="margin:3%; width:80%">
                    <div class="card-body">
                        <h3 class="card-title"><%= post.tripCountry %> / <%= post.tripCity %></h3>
                        <p class="card-text"><%= post.tripSummary %></p>
                        <a href="#" class="btn btn-primary">Görüntüle</a>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </div>
